@model IEnumerable<LibraryApp.Models.Reservation>

@{
    ViewData["Title"] = "Index";
}

<h1>Reservation's Control</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InitialDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    <a asp-controller="Books" asp-action="Details" asp-route-id="@item.BookId">@Html.DisplayFor(modelItem => item.BookId)</a>
            </td>
            <td>
                    <a asp-controller="Users" asp-action="Details" asp-route-id="@item.UserId">@Html.DisplayFor(modelItem => item.UserId)</a>
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.InitialDate!.Value.Date)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.LastDate!.Value.Date)
            </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.Id"><input type="submit" value="Details" class="btn btn-info" /></a>
                    <a asp-action="Delete" asp-route-id="@item.Id"><input type="submit" value="Delete" class="btn btn-danger" /></a>
            </td>
        </tr>
}
    </tbody>
</table>
